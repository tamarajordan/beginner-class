<% if @course.status == "active" || @course.status == "pre_enroll" %>
  <div id="headline" style="background-image: url(<%= @course.promo_photo %>)">
      <div>
        <h1><%= @course.instructor.upcase %></h1>
        <h2><%= @course.name.upcase %></h2>
      </div>
  </div>

  <div class="triplet">
    <div>
      <img src="<%= @marketing_content.intro_icon_2 %>"/>
      <h2><%= @marketing_content.intro_title_1.upcase %></h2>
      <p><%= @marketing_content.intro_content_1 %></p>
    </div>
    <div class="center-triplet">
      <img src="<%= @marketing_content.intro_icon_1 %>"/>
      <h2><%= @marketing_content.intro_title_2.upcase %></h2>
      <p><%= @marketing_content.intro_content_2 %></p>
    </div>
    <div>
      <h1>$<%= @course.price/100%></h1><h3>LIFETIME ACCESS</h3>
      <% if @course.status == "active" %>
        <button>TAKE THE CLASS</button><br />
      <% else %>
        <button>PRE-ENROLL</button>
      <% end %>
      <button>GIVE AS A GIFT</button><button>FAQ</button>
    </div>
  </div>

  <div id="description">
    <div>
      <div id="description-text">
        <h1><%= @marketing_content.description_title %></h1>
        <p><%= @marketing_content.description_content %></p>
      </div>
      <div id="description-photo">
        <img src="<%= @marketing_content.description_photo %>" width="300"/>
      </div>
    </div>
  </div>

  <div id="value-props">
    <div style="background-image: url(<%= @marketing_content.background_photo_1 %>)">
      <div>
        <div class="prop">
          <img src="https://do6eyjibs3jse.cloudfront.net/assets/refresh/cm/icon-play-457923eaae6627b6df2b2a46b5ac0b5d70bb4bb1f48b9dd711fda8b8fb2f0022.svg"/>
          <h3><%= @marketing_content.feature_title_1 %></h3>
          <p><%= @marketing_content.feature_content_1 %></p>
        </div>
        <div id="prop-center" class="prop">
          <img src="https://do6eyjibs3jse.cloudfront.net/assets/refresh/cm/icon-pens-e003a0513504c20172216449e2c8141934cd8c6e93d527a498ab54d1c9821b6d.svg"/>
          <h3><%= @marketing_content.feature_title_2 %></h3>
          <p><%= @marketing_content.feature_content_2 %></p>
        </div>
        <div class="prop">
          <img src="https://do6eyjibs3jse.cloudfront.net/assets/refresh/cm/icon-door-dafb2e9872a48684f7ced3975a8473132694ae1366cfad35fbbcdf9039301473.svg"/>
          <h3><%= @marketing_content.feature_title_3 %></h3>
          <p><%= @marketing_content.feature_content_3 %></p>
        </div>
      </div>
    </div>
  </div>

  <div id="lesson-plan">
    <% if @course.status == "active" %>
      <h1>LESSON PLAN</h1>
      <% @lessons.each do |l| %>
        <div class="lesson">
          <h1><%= l.number < 10 ? "0#{l.number}" : l.number %></h1>
          <h2><%= l.name %></h2>
          <p><%= l.description %></p>
        </div>
      <% end %>
    <% else %>
      <h3>Want to know when the class goes live?</h3>
      <form><input type="text" value="Your Email" />
  </form> <button>JOIN THE WAITLIST</button>
    <% end %>
  </div>

  <div id="testimonials" style="background-image: url(<%= @marketing_content.background_photo_2 %>)" />
    <div class="recommendations">
      <% @recommendations.each do |rec| %>
        <div class="rec">
          <h1><%= rec.content %></h1>
          <div class="recommender">
            <h2><%= rec.name %></h2>
            <p><%= rec.description %></p>
            <img src="<%= rec.photo %>" width="150" />
          </div>
        </div>
      <% end %>
    </div>

    <div class="triplet">
      <div>
        <h1>100%</h1>
        <h2>GUARANTEED</h2>
        <p>We offer full refunds up to 30 days after purchase.</p>
      </div>
      <div class="center-triplet">
        <img src="https://do6eyjibs3jse.cloudfront.net/assets/refresh/cm/device-448e4b6730250f231e2d6bc3b3e487f6cc8bff4ce3fda0e65dbd4b14f82d4272.svg" width="100" />
        <h2>ANY BROWSER</h2>
        <p>Your class will play in any modern browser.</p>
      </div>
      <div>
        <img src="https://do6eyjibs3jse.cloudfront.net/assets/refresh/cm/infinity-fbc67304d07382a652f3e5b3b2520f30e6b2a646b71eaf112979caaee90e3a98.svg" width="100" />
        <h2>NEVER EXPIRES</h2>
        <p>Take the class at your own pace and in your own time.</p>
      </div>
    </div>
  </div>

  <div class="shares">
    <h3>SHARE THIS CLASS</h3>
    <div>
      <img src="https://www.seeklogo.net/wp-content/uploads/2016/11/twitter-icon-circle-blue-logo-preview.png" width="50" />
    </div>
    <div>
      <img src="http://www.iconninja.com/files/119/402/387/facebook-circle-social-share-circular-media-icon.svg" width="50" />
    </div>
    <div>
      <img src="http://unameitcs.com/wp-content/uploads/2013/08/blue-mail-icon-300x300.png" width="50" />
    </div>
  </div>

  <div class="recommended-courses">
    <% @recommended_courses.each do |course| %>
      <div class="rec_course" style="background-image: url(<%= course.promo_photo %>)">
        <h1><%= course.instructor.upcase %></h1>
        <h2><%= course.name.upcase %></h2>
      </div>
    <% end %>
  </div>
<% else %>
  <h1><%= "#{@course.instructor} #{@course.name}" %> is not currently active or open for pre-enrollment.</h1>
<% end %>
