<% if @course.status == "active" || @course.status == "pre_enroll" %>
  <div id="headline" style="background-image: url(<%= @course.promo_photo %>)">
      <div>
        <h1><%= @course.instructor.upcase %></h1>
        <h2><%= @course.name.upcase %></h2>
      </div>
  </div>

  <div class="triplet">
    <div>
      <img src="<%= @marketing_content.intro_icon_2 %>"/>
      <h2><%= @marketing_content.intro_title_1.upcase %></h2>
      <p><%= @marketing_content.intro_content_1 %></p>
    </div>
    <div class="center-triplet">
      <img src="<%= @marketing_content.intro_icon_1 %>"/>
      <h2><%= @marketing_content.intro_title_2.upcase %></h2>
      <p><%= @marketing_content.intro_content_2 %></p>
    </div>
    <div>
      <div><h1>$<%= @course.price/100%></h1><h3>LIFETIME ACCESS</h3></div>
      <% if @course.status == "active" %>
        <button id="take-class">TAKE THE CLASS</button><br />
      <% else %>
        <button id="pre-enroll">PRE-ENROLL</button>
      <% end %>
      <button id="gift">GIVE AS A GIFT</button><button id="faq">FAQ</button>
    </div>
  </div>

  <div id="description">
    <div>
      <div id="description-text">
        <h1><%= @marketing_content.description_title %></h1>
        <p><%= @marketing_content.description_content %></p>
      </div>
      <div id="description-photo">
        <img src="<%= @marketing_content.description_photo %>" width="300"/>
      </div>
    </div>
  </div>

  <div id="value-props">
    <div style="background-image: url(<%= @marketing_content.background_photo_1 %>)">
      <div>
        <div class="prop">
          <img src="https://do6eyjibs3jse.cloudfront.net/assets/refresh/cm/icon-play-457923eaae6627b6df2b2a46b5ac0b5d70bb4bb1f48b9dd711fda8b8fb2f0022.svg"/>
          <h3><%= @marketing_content.feature_title_1 %></h3>
          <p><%= @marketing_content.feature_content_1 %></p>
        </div>
        <div id="prop-center" class="prop">
          <img src="https://do6eyjibs3jse.cloudfront.net/assets/refresh/cm/icon-pens-e003a0513504c20172216449e2c8141934cd8c6e93d527a498ab54d1c9821b6d.svg"/>
          <h3><%= @marketing_content.feature_title_2 %></h3>
          <p><%= @marketing_content.feature_content_2 %></p>
        </div>
        <div class="prop">
          <img src="https://do6eyjibs3jse.cloudfront.net/assets/refresh/cm/icon-door-dafb2e9872a48684f7ced3975a8473132694ae1366cfad35fbbcdf9039301473.svg"/>
          <h3><%= @marketing_content.feature_title_3 %></h3>
          <p><%= @marketing_content.feature_content_3 %></p>
        </div>
      </div>
    </div>
  </div>

<div>
    <% if @course.status == "active" %>
      <div id="lesson-container">
        <h1>LESSON PLAN</h1>
        <% @lessons.each do |l| %>
          <div>
            <div class="lesson-number">
              <h1><%= l.number < 10 ? "0#{l.number}" : l.number %></h1>
            </div>
            <div class="lesson-name-desc">
              <h2><%= l.name %></h2>
              <p><%= l.description %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div id="waitlist-form">
        <div>
          <h3>Want to know when the class goes live?</h3>
          <div id="form">
            <form>
             <input type="text" value="Your Email" />
            </form>
            <button>JOIN THE WAITLIST</button>
          </div>
        </div>
      </div>
    <% end %>
</div>

