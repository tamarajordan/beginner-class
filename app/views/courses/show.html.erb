<!-- Showing only 1 recommendation to demonstrate what styling looks like -->
  <div id="testimonials" style="background-image: url(<%= @marketing_content.background_photo_2 %>)" />
    <div>
    <% if @course.status == "active" %>
      <div id="recommendations">
        <div class="rec-content">
          <blockquote><%= @recommendations.first.content %></blockquote>
        </div>
        <div class="recommender">
          <img src="<%= @recommendations.first.photo %>" width="150" />
          <h2><%= @recommendations.first.name %></h2>
          <p><%= @recommendations.first.description %></p>
        </div>
      </div>
      <% end %>
    </div>


    <div class="triplet">
      <div>
        <h1>100%</h1>
        <h2>GUARANTEED</h2>
        <p>We offer full refunds up to 30 days after purchase.</p>
      </div>
      <div class="center-triplet">
        <img src="https://do6eyjibs3jse.cloudfront.net/assets/refresh/cm/device-448e4b6730250f231e2d6bc3b3e487f6cc8bff4ce3fda0e65dbd4b14f82d4272.svg" width="100" />
        <h2>ANY BROWSER</h2>
        <p>Your class will play in any modern browser.</p>
      </div>
      <div>
        <img src="https://do6eyjibs3jse.cloudfront.net/assets/refresh/cm/infinity-fbc67304d07382a652f3e5b3b2520f30e6b2a646b71eaf112979caaee90e3a98.svg" width="100" />
        <h2>NEVER EXPIRES</h2>
        <p>Take the class at your own pace and in your own time.</p>
      </div>
    </div>
  </div>

  <div id="shares">
    <div>
      <h3>SHARE THIS CLASS</h3>
      <div class="sharelink">
        <img src="https://www.seeklogo.net/wp-content/uploads/2016/11/twitter-icon-circle-blue-logo-preview.png" width="50" />
      </div>
      <div id="middle-link" class="sharelink">
        <img src="http://www.iconninja.com/files/119/402/387/facebook-circle-social-share-circular-media-icon.svg" width="50" />
      </div>
      <div class="sharelink">
        <img src="http://unameitcs.com/wp-content/uploads/2013/08/blue-mail-icon-300x300.png" width="50" />
      </div>
    </div>
  </div>

  <div id="recommended-courses">
    <div>
      <h1>RECOMMENDED FOR YOU</h1>
        <% @recommended_courses.each do |course| %>
        <div>
          <div class="rec_course" style="background-image: url(<%= course.promo_photo %>)">
            <div class="class-info">
              <h1><%= course.instructor.upcase %></h1>
              <h2><%= course.name.upcase %></h2>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <h1><%= "#{@course.instructor} #{@course.name}" %> is not currently active or open for pre-enrollment.</h1>
<% end %>


